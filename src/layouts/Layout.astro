---
import '../styles/main-style.css';
import '../styles/accessibility.css';
import '../styles/transitions.css';
import { ViewTransitions } from 'astro:transitions';
import type { LayoutProps } from '../types/components';
import { siteConfig } from '../config/site';

type Props = LayoutProps;

const {
  title = 'Avengh - Expert Custom Software Development in Ghana',
  description = 'Avengh delivers high-performance custom software, web and mobile apps, and AI solutions in Ghana. Partner with our expert team for scalable, innovative technology tailored to your business needs.',
  image = `${siteConfig.url}${siteConfig.seo.defaultOGImage}`
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="keywords"
        content="custom software development Ghana, web application development, mobile app development Ghana, AI solutions, software consulting, fintech Ghana, HealthTech solutions">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph / Facebook & WhatsApp -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={image}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={image}>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96"/>
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"/>
  <link rel="manifest" href="/site.webmanifest"/>
  <link rel="icon" href="/favicon.ico" sizes="any"/>

  <ViewTransitions />
</head>
<body>
<!-- Skip to main content link for accessibility -->
<a href="#main-content" class="skip-link">Skip to main content</a>
<!-- Epic Neural Background -->
<div class="neural-background"></div>

<!-- Floating Geometric Shapes -->
<div class="geometric-shapes">
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
</div>

<!-- Neural Network Lines -->
<div class="neural-lines">
  <div class="neural-line"></div>
  <div class="neural-line"></div>
  <div class="neural-line"></div>
</div>

<!-- Header -->
<header class="glass">
  <nav>
    <a href="/" class="logo">
      <img src="/assets/img/logo.png" alt="Avengh Logo">
      Avengh
    </a>
    <ul class="nav-links">
      <li><a href="/#home">Home</a></li>
      <li><a href="/#solutions">Solutions</a></li>
      <li><a href="/#portfolio">Portfolio</a></li>
      <li><a href="/#evolution">Evolution</a></li>
      <li><a href="/#about">About</a></li>
      <li><a href="/#connect">Connect</a></li>
    </ul>
    <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" aria-expanded="false">
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
    </button>
  </nav>
  <nav class="mobile-nav" aria-label="Mobile navigation">
    <a href="/#home">Home</a>
    <a href="/#solutions">Solutions</a>
    <a href="/#portfolio">Portfolio</a>
    <a href="/#evolution">Evolution</a>
    <a href="/#about">About</a>
    <a href="/#connect">Connect</a>
  </nav>
</header>

<main id="main-content">
  <slot />
</main>

<!-- Footer -->
<footer>
  <div class="footer-content">
    <ul class="footer-links">
      <li><a href="/#portfolio">Solutions Portfolio</a></li>
      <li><a href="/#case-studies">Client Success Stories</a></li>
      <li><a href="/privacy">Privacy Policy</a></li>
      <li><a href="/terms">Terms of Service</a></li>
      <li><a href={siteConfig.social.github} target="_blank" rel="noopener">GitHub</a></li>
      <li><a href={siteConfig.social.linkedin} target="_blank" rel="noopener">LinkedIn</a></li>
    </ul>
    <div class="footer-copyright">
      <p>&copy; {new Date().getFullYear()} {siteConfig.companyName}. All development rights reserved across digital platforms.</p>
    </div>
    <div class="footer-design">
      Design Framework: Professional Template | Enhanced by {siteConfig.name} Development Team | Custom Software Solutions
    </div>
  </div>
</footer>

<script>
    import { initializeScripts } from "../scripts/main-scripts.js";

    // Initialize scripts
    // Check if DOM is already loaded (script loaded after DOMContentLoaded)
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeScripts);
    } else {
        // DOM is already loaded, initialize immediately
        initializeScripts();
    }

    // Re-initialize on Astro page swap (for View Transitions)
    document.addEventListener('astro:page-load', initializeScripts);
</script>
</body>
</html>
